{
  "id": "network.outbound_drop_high.v1",
  "name": "High Outbound Packet Drops",
  "description": "Detect sustained high % Outbound Packets Dropped on network ports.",
  "enabled": true,
  "severity": "high",
  "detector": {
    "type": "threshold_sustained",
    "comparison": "greater",
    "threshold": 1.0,
    "min_consecutive": 6,
    "filter": {
      "logic": "and",
      "conditions": [
        {"field": "attribute", "op": "eq", "value": "Network Port: % Outbound Packets Dropped"}
      ]
    }
  }
}
