{
  "id": "storage.adapter_failed_reads_high.v1",
  "name": "High Adapter Failed Reads",
  "description": "Detect sustained high Failed Reads/sec on physical disk adapters.",
  "enabled": true,
  "severity": "critical",
  "detector": {
    "type": "threshold_sustained",
    "comparison": "greater",
    "threshold": 2.0,
    "min_consecutive": 4,
    "filter": {
      "logic": "and",
      "conditions": [
        {"field": "object", "op": "eq", "value": "Physical Disk Adapter"},
        {"field": "attribute", "op": "eq", "value": "Physical Disk Adapter: Failed Reads/sec"}
      ]
    }
  }
}
