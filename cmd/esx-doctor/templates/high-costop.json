{
  "id": "cpu.high_costop.v1",
  "name": "High Co-Stop Time",
  "description": "Detect sustained high vCPU co-stop time.",
  "enabled": true,
  "severity": "high",
  "detector": {
    "type": "threshold_sustained",
    "threshold": 3.0,
    "comparison": "greater",
    "min_consecutive": 6,
    "filter": {
      "logic": "and",
      "conditions": [
        {"field": "attribute", "op": "eq", "value": "Vcpu: % CoStop"},
        {"field": "instance", "op": "not_regex", "value": "\\bidle\\d+\\b"}
      ]
    }
  }
}
