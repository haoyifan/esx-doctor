{
  "id": "cpu.high_costop.v1",
  "name": "High Co-Stop Time",
  "description": "Detect sustained vCPU co-stop time over threshold.",
  "enabled": true,
  "severity": "high",
  "detector": {
    "type": "high_costop",
    "threshold": 3.0,
    "min_consecutive": 6,
    "include_attribute_equals": ["Vcpu: % CoStop"],
    "exclude_instance_regex": ["\\bidle\\d+\\b"]
  }
}
