{
  "id": "numa.group_local_memory_low.v1",
  "name": "Low NUMA Local Memory",
  "description": "Detect groups with sustained low Numa % Local (remote memory pressure).",
  "enabled": true,
  "severity": "high",
  "detector": {
    "type": "threshold_sustained",
    "target_attribute": "Group Memory: Numa % Local",
    "comparison": "less",
    "threshold": 85.0,
    "min_consecutive": 8,
    "filter": {
      "logic": "and",
      "conditions": [
        {"field": "instance", "op": "not_regex", "value": "\\.[0-9]+$"}
      ]
    }
  }
}
